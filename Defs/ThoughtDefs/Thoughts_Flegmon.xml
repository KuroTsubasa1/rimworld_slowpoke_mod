      <li>
        <label>Flegmon presence</label>
        <description>Being near a Flegmon is oddly calming.</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- Cuddled by Flegmon thought -->
  <ThoughtDef>
    <defName>CuddledByFlegmon</defName>
    <durationDays>1</durationDays>
