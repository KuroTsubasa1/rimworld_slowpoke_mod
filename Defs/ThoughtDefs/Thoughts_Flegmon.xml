    <stages>
      <li>
        <label>cuddled by Flegmon</label>
        <description>A Flegmon gave me a warm, comforting cuddle. So sweet!</description>
        <baseMoodEffect>6</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
